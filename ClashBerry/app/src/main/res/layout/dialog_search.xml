<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/background_secondary">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="Back"
            android:layout_marginEnd="8dp" />

        <!-- Search Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:gravity="start|center_vertical" />

        <!-- Menu Icon (3 dots) -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="Menu"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Search Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_search"
            android:layout_marginBottom="24dp"
            android:alpha="0.8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clan Search"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the name or clan tag of a clan in the search field above. A clan tag looks like #2Q9YRQY8 and you can find it in the game below a clan's name."
            android:textSize="16sp"
            android:textColor="@color/text_color_secondary"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:paddingHorizontal="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearchTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/ClashBerry.TextInputLayout"
        android:hint="@string/search_hint">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearchTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ClashBerry.TextInputEditText"
            android:inputType="textNoSuggestions|textCapCharacters"
            android:maxLength="15"
            android:imeOptions="actionSearch"
            android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

        <!-- Search Results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginTop="16dp" />

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/searchLoadingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:indeterminateTint="@color/accent_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_data"
                android:textSize="16sp"
                android:textColor="@color/text_color" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/text_color_secondary"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_war"
                style="@style/ClashBerry.Button" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>